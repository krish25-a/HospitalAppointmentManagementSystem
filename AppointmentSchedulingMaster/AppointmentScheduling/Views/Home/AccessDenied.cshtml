@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center" style="margin-top: 100px;">
    <div class="card shadow-sm" style="max-width: 600px; margin: auto;">
        <div class="card-body">
            <h1 class="display-4 text-danger">
                <i class="fas fa-exclamation-triangle"></i> Access Denied
            </h1>
            <p class="lead">
                You don't have permission to access this page. Please make sure you are registered and logged in.
            </p>
            <hr class="my-4">
            <p>If you think this is a mistake, please contact support or try logging in again.</p>
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
                <i class="fas fa-sign-in-alt"></i> Login
            </a>
            <a href="@Url.Action("Register", "Account")" class="btn btn-secondary">
                <i class="fas fa-user-plus"></i> Register
            </a>
        </div>
    </div>
</div>
