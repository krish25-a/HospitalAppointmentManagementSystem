@model AppointmentScheduling.Models.EmailModel

@using (Html.BeginForm("Send", "Email", FormMethod.Post))
{
    <div>
        <label for="from">From:</label>
        @Html.TextBoxFor(m => m.From, new { @class = "form-control" })
    </div>
    <div>
        <label for="to">To:</label>
        @Html.TextBoxFor(m => m.To, new { @class = "form-control" })
    </div>
    <div>
        <label for="subject">Subject:</label>
        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
    </div>
    <div>
        <label for="body">Body:</label>
        @Html.TextAreaFor(m => m.Body, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Send Email</button>
          }
